keywords = {Electroencephalography (EEG),Independent Component Analysis (ICA),Overt speech production,Speech artifacts},
pages = {171--180},
pmid = {25450111},
publisher = {Elsevier Inc.},
title = {{Removing speech artifacts from electroencephalographic recordings during overt picture naming}},
url = {http://dx.doi.org/10.1016/j.neuroimage.2014.10.049},
