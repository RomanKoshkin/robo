issn = {01434160},
journal = {Cell Calcium},
keywords = {Astrocytic processes,Blood-brain barrier,Dendritic spines,Na+-Ca2+ exchange,Rat brain,Synapses},
title = {{Cellular and subcellular localization of Na+-Ca2+ exchanger protein isoforms, NCX1, NCX2, and NCX3 in cerebral cortex and hippocampus of adult rat}},
