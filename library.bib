doi = {10.1371/journal.pone.0003929},
file = {:Users/romankoshkin/Library/Application Support/Mendeley Desktop/Downloaded/Wang et al. - 2008 - The enhancement of the N1 wave elicited by sensory stimuli presented at very short inter-stimulus intervals is a ge.pdf:pdf},
