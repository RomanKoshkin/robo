issn = {00144819},
journal = {Exp. Brain Res.},
keywords = {Calbindin,Calcium-binding protein,Colloidal gold,Intracellular concentration,Quantitation,Rat},
title = {{Axons and axon terminals of cerebellar Purkinje cells and basket cells have higher levels of parvalbumin immunoreactivity than somata and dendrites: quantitative analysis by immunogold labeling}},
