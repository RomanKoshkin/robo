doi = {10.1007/BF00233988},
file = {:Users/romankoshkin/Library/Application Support/Mendeley Desktop/Downloaded/Sheliga, Riggio, Rizzolatti - 1994 - Orienting of attention and eye movements.pdf:pdf},
